{
  "name": "voidlauncher",
  "version": "0.2.0",
  "description": "VoidLauncher (prototype)",
  "homepage": "https://github.com/MrOz59/of-client-launcher",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrOz59/of-client-launcher.git"
  },
  "main": "dist/main/main.js",
  "scripts": {
    "build:preload": "node build-preload.js",
    "dev:renderer": "vite",
    "dev:main": "npm run build:preload && tsc -p tsconfig.build.json && ELECTRON_RUN_AS_NODE= ELECTRON_DISABLE_SANDBOX=1 NODE_ENV=development OF_ALLOW_TORRENT_FALLBACK=1 npx electron dist/main/main.js --no-sandbox --disable-setuid-sandbox --disable-seccomp-filter-sandbox --disable-namespace-sandbox --disable-gpu --disable-features=VizDisplayCompositor",
    "dev": "npm run build:preload && concurrently \"npm:dev:renderer\" \"npm:dev:main\"",
    "torrent:deps": "node scripts/install-torrent-agent-deps.js",
    "bundle:torrent-agent": "node scripts/build-torrent-agent.js",
    "bundle:torrent-agent-runtime": "node scripts/build-torrent-agent-runtime.js",
    "build:game-overlay": "node scripts/build-game-overlay.js",
    "fetch:ludusavi": "node scripts/fetch-ludusavi.js",
    "fetch:legendary": "node scripts/fetch-legendary.js",
    "build:app": "npm run build:preload && vite build && tsc -p tsconfig.build.json",
    "build": "npm run bundle:torrent-agent && npm run bundle:torrent-agent-runtime && npm run build:app",
    "dist:linux": "npm run fetch:ludusavi && npm run fetch:legendary && node scripts/patch-electron-builder.js && npm run build && electron-builder --linux --publish never",
    "dist:appimage": "npm run fetch:ludusavi && npm run fetch:legendary && node scripts/patch-electron-builder.js && npm run build && electron-builder --linux appimage --publish never",
    "dist:rpm": "npm run fetch:ludusavi && npm run fetch:legendary && node scripts/patch-electron-builder.js && npm run build && electron-builder --linux rpm --publish never",
    "dist:pacman": "npm run fetch:ludusavi && npm run fetch:legendary && node scripts/patch-electron-builder.js && npm run build && electron-builder --linux pacman --publish never",
    "dist:win": "npm run fetch:ludusavi && npm run fetch:legendary && npm run build && electron-builder --win --publish never",
    "start": "electron .",
    "test:scraper": "node scripts/test-scraper-dist.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "7zip-bin-full": "^25.1.2",
    "axios": "^1.5.0",
    "better-sqlite3": "^12.5.0",
    "cheerio": "^1.0.0-rc.12",
    "electron-is-dev": "^2.0.0",
    "googleapis": "^118.0.0",
    "lucide-react": "^0.560.0",
    "node-7z": "^2.0.5",
    "node-unrar-js": "^2.0.2",
    "open": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "optionalDependencies": {
    "archiver": "^5.3.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1"
  },
  "build": {
    "appId": "me.voidlauncher.app",
    "productName": "VoidLauncher",
    "icon": "icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-preload/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "icon.png",
        "to": "icon.png"
      },
      {
        "from": "services/torrent-agent/torrent-agent",
        "to": "torrent-agent",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "services/torrent-agent/libtorrent_rpc.py",
        "to": "torrent-agent/libtorrent_rpc.py"
      },
      {
        "from": "services/torrent-agent/pydeps",
        "to": "torrent-agent/pydeps",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "services/torrent-agent/python",
        "to": "torrent-agent/python",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "vendor/ludusavi",
        "to": "ludusavi",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "vendor/legendary",
        "to": "legendary",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/7zip-bin-full/**"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "pacman"
      ],
      "category": "Game",
      "maintainer": "Chaos Factory Team <contato@mroz.dev.br>",
      "icon": "icon.png",
      "executableName": "voidlauncher"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico"
    }
  }
}
